@model MERAS.Models.Supervisor

@{
	ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
	<h4>Supervisor</h4>
	<hr />
	<dl class="dl-horizontal">
		<dt>
			@Html.DisplayNameFor(model => model.LastName)
		</dt>
		<dd>
			@Html.DisplayFor(model => model.LastName)
		</dd>
		<dt>
			@Html.DisplayNameFor(model => model.FirstName)
		</dt>
		<dd>
			@Html.DisplayFor(model => model.FirstName)
		</dd>
		<dt>
			@Html.DisplayNameFor(model => model.Phone)
		</dt>
		<dd>
			@Html.DisplayFor(model => model.Phone)
		</dd>
		<dt>
			@Html.DisplayNameFor(model => model.Email)
		</dt>
		<dd>
			@Html.DisplayFor(model => model.Email)
		</dd>
		<dt>
			@Html.DisplayNameFor(model => model.Department)
		</dt>
		<dd>
			@Html.DisplayFor(model => model.Department.Name)
		</dd>
		<dt>
			@Html.DisplayNameFor(model => model.Students)
		</dt>
		<dd>
			<table class="table">
				<thead>
				</thead>
				<tbody>

					@foreach (var student in Model.Students)
					{
						<tr>
							<td>
								@Html.DisplayFor(modelItem => student.ID)
							</td>
							<td>
								@Html.DisplayFor(modelItem => student.FullName)
							</td>
							<td>
								@Html.DisplayFor(modelItem => student.CreditHrs)
							</td>
							<td>
								@Html.DisplayFor(modelItem => student.Phone)
							</td>
							<td>
								@Html.DisplayFor(modelItem => student.Email)
							</td>
						</tr>
					}
				</tbody>
			</table>
		</dd>
	</dl>
</div>
<div>
	<a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
	<a asp-action="Index">Back to List</a>
</div>



